Must add Email and email Id and Mii and Miiid (Will have defaulted Mii)


CREATE TABLE `tbchats` (
	`ChatID` SMALLINT(6) NOT NULL,
	`ChatLog` LONGTEXT NULL,
	`Admin` VARCHAR(16) NOT NULL,
	`Password` VARCHAR(16) NOT NULL COMMENT 'If a admin wants to put a password on the chat',
	PRIMARY KEY (`ChatID`),
	INDEX `FK_tbchats_tbuserinfo` (`Admin`),
	CONSTRAINT `FK_tbchats_tbuserinfo` FOREIGN KEY (`Admin`) REFERENCES `tbuserinfo` (`Username`)
)
COMMENT='This holds all the information on chats'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

CREATE TABLE `tbemailinfo` (
	`EmailID` SMALLINT(6) NOT NULL,
	`Email` INT(11) NOT NULL,
	PRIMARY KEY (`EmailID`)
)
COMMENT='This holds the user\'s email'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

CREATE TABLE `tbhaircolor` (
	`HairColorID` TINYINT(4) NOT NULL,
	`Desc` TINYTEXT NOT NULL,
	`HairColor` TINYTEXT NOT NULL,
	PRIMARY KEY (`HairColorID`)
)
COMMENT='Holds all of the hair colors a mii can have'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

CREATE TABLE `tbhairstyles` (
	`HairID` TINYINT(4) NOT NULL,
	`HairStyle` TINYTEXT NOT NULL,
	PRIMARY KEY (`HairID`)
)
COMMENT='This table alls of the hairstyles a Mii can have'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

CREATE TABLE `tbmemberchatids` (
	`ChatID` SMALLINT(6) NULL DEFAULT NULL,
	`Username` VARCHAR(16) NULL DEFAULT NULL,
	INDEX `FK_tbMemberChatIDs_tbchats` (`ChatID`),
	INDEX `FK_tbMemberChatIDs_tbuserinfo` (`Username`),
	CONSTRAINT `FK_tbMemberChatIDs_tbchats` FOREIGN KEY (`ChatID`) REFERENCES `tbchats` (`ChatID`),
	CONSTRAINT `FK_tbMemberChatIDs_tbuserinfo` FOREIGN KEY (`Username`) REFERENCES `tbuserinfo` (`Username`)
)
COMMENT='Table will connect member\'s to the chats they are in'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

CREATE TABLE `tbmii` (
	`MiiID` INT(11) NOT NULL,
	`HairID` TINYINT(4) NOT NULL,
	`ShirtID` TINYINT(4) NOT NULL,
	`PantsID` TINYINT(4) NOT NULL,
	`SkinID` TINYINT(4) NOT NULL,
	`HairColorID` TINYINT(4) NOT NULL,
	PRIMARY KEY (`MiiID`),
	INDEX `FK_tbmii_tbshirt` (`ShirtID`),
	INDEX `FK_tbmii_tbhairstyles` (`HairID`),
	INDEX `FK_tbmii_tbhaircolor` (`HairColorID`),
	INDEX `FK_tbmii_tbskin` (`SkinID`),
	INDEX `FK_tbmii_tbpants` (`PantsID`),
	CONSTRAINT `FK_tbmii_tbhaircolor` FOREIGN KEY (`HairColorID`) REFERENCES `tbhaircolor` (`HairColorID`),
	CONSTRAINT `FK_tbmii_tbhairstyles` FOREIGN KEY (`HairID`) REFERENCES `tbhairstyles` (`HairID`),
	CONSTRAINT `FK_tbmii_tbpants` FOREIGN KEY (`PantsID`) REFERENCES `tbpants` (`PantsID`),
	CONSTRAINT `FK_tbmii_tbshirt` FOREIGN KEY (`ShirtID`) REFERENCES `tbshirt` (`ShirtID`),
	CONSTRAINT `FK_tbmii_tbskin` FOREIGN KEY (`SkinID`) REFERENCES `tbskin` (`SkinID`)
)
COMMENT='This table holds all of the information of a user\'s Mii'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

CREATE TABLE `tbpants` (
	`PantsID` TINYINT(4) NOT NULL,
	`PantsColor` TINYTEXT NOT NULL COMMENT 'Holds pants color in RBG',
	PRIMARY KEY (`PantsID`)
)
COMMENT='Holds all the options a Mii can have for pants'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

CREATE TABLE `tbshirt` (
	`ShirtID` TINYINT(4) NOT NULL,
	`ShirtColor` VARCHAR(8) NOT NULL,
	`Description` VARCHAR(255) NOT NULL,
	PRIMARY KEY (`ShirtID`)
)
COMMENT='This holds all of the information on a MII\'s shirt'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;
CREATE TABLE `tbskin` (
	`SkinID` TINYINT(4) NOT NULL,
	`Skin` TINYTEXT NOT NULL COMMENT 'The color of a MIi\'s skin in RGB',
	PRIMARY KEY (`SkinID`)
)
COMMENT='Holds the different tones a Mii\'s skin can be'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;


CREATE TABLE `tbuserinfo` (
	`Username` VARCHAR(16) NOT NULL COMMENT 'This is the user name and must be unique, therefor is the primary key.\\r\\n',
	`Password` VARCHAR(16) NOT NULL COMMENT 'This is the user\'s password',
	`EmailID` SMALLINT(6) NOT NULL,
	`MiiID` INT(11) NOT NULL,
	PRIMARY KEY (`Username`),
	INDEX `FK_tbuserinfo_tbemailinfo` (`EmailID`),
	INDEX `FK_tbuserinfo_tbmii` (`MiiID`),
	CONSTRAINT `FK_tbuserinfo_tbemailinfo` FOREIGN KEY (`EmailID`) REFERENCES `tbemailinfo` (`EmailID`),
	CONSTRAINT `FK_tbuserinfo_tbmii` FOREIGN KEY (`MiiID`) REFERENCES `tbmii` (`MiiID`)
)
COMMENT='This table holds all of the informatin for the user'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;
CREATE TABLE `tbuserinfo` (
	`Username` VARCHAR(16) NOT NULL COMMENT 'This is the user name and must be unique, therefor is the primary key.\\r\\n',
	`Password` VARCHAR(16) NOT NULL COMMENT 'This is the user\'s password',
	`EmailID` SMALLINT(6) NOT NULL,
	`MiiID` INT(11) NOT NULL,
	PRIMARY KEY (`Username`),
	INDEX `FK_tbuserinfo_tbemailinfo` (`EmailID`),
	INDEX `FK_tbuserinfo_tbmii` (`MiiID`),
	CONSTRAINT `FK_tbuserinfo_tbemailinfo` FOREIGN KEY (`EmailID`) REFERENCES `tbemailinfo` (`EmailID`),
	CONSTRAINT `FK_tbuserinfo_tbmii` FOREIGN KEY (`MiiID`) REFERENCES `tbmii` (`MiiID`)
)
COMMENT='This table holds all of the informatin for the user'
COLLATE='latin1_swedish_ci'
ENGINE=InnoDB
;

